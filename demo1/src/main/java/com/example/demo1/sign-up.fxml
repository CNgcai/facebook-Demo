<AnchorPane prefHeight="553.0" prefWidth="715.0" style="-fx-background-color: #1A4BCF;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.signUpController">
   <children>
      <ImageView fitHeight="111.0" fitWidth="144.0" layoutX="286.0" layoutY="51.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../../../../images/Facebook-logo.png" />
         </image>
      </ImageView>
      <TextField fx:id="fullNameTxt" layoutX="208.0" layoutY="166.0" prefHeight="35.0" prefWidth="300.0" promptText="Full Name">
         <font>
            <Font name="Arial Bold" size="14.0" />
         </font>
      </TextField>
      <TextField fx:id="emailTxt" layoutX="208.0" layoutY="217.0" prefHeight="35.0" prefWidth="300.0" promptText="Email">
         <font>
            <Font name="Arial Bold" size="14.0" />
         </font>
      </TextField>
      <DatePicker fx:id="datePicker" layoutX="208.0" layoutY="266.0" prefHeight="35.0" prefWidth="300.0" promptText="Date of Birth" style="-fx-background-color: transparent;" />
      <TextField fx:id="passwordTxt" layoutX="208.0" layoutY="314.0" prefHeight="35.0" prefWidth="300.0" promptText="Password">
         <font>
            <Font name="Arial Bold" size="14.0" />
         </font>
      </TextField>
      <TextField fx:id="confirmPText" layoutX="208.0" layoutY="360.0" prefHeight="35.0" prefWidth="300.0" promptText="Confirm Password">
